<Window x:Class="DeansOffice.Windows.Subject"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeansOffice.Windows"
        mc:Ignorable="d"
        Height="115" Width="310"
        ResizeMode="NoResize">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0, 10, 0, 0">
                <Label>Предмет</Label>
                <TextBox x:Name="NameTextBox" Style="{StaticResource TextBox}" Margin="0, 0, -210, 0"/>
            </StackPanel>
            <Button x:Name="SaveButton" Margin="0,5,0,0" Style="{StaticResource Button}" Click="SaveButton_Click" Content="Сохранить" />
        </StackPanel>
    </Grid>
</Window>
